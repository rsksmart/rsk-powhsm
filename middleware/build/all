#!/bin/bash

BUILDDIR=$(dirname $0)
BINDIR=$(realpath $BUILDDIR/../bin/)

echo "Building all..."

QUIET=1 $BUILDDIR/sim && \
QUIET=1 $BUILDDIR/manager && \
QUIET=1 $BUILDDIR/adm && \
QUIET=1 $BUILDDIR/restore && \
QUIET=1 $BUILDDIR/signapp && \
QUIET=1 $BUILDDIR/lbutils && \
echo "" && sha256sum $BINDIR/*.tgz
